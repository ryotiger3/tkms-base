<%= render "shared/admin-header"%>

<%= form_with model: @admin, url: admin_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Login
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text"></label>
      <span class="indispensable">Required</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"e-mail", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text"></label>
      <span class="indispensable">Required</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"password" %>
  </div>
  <div class='admin-login-btn'>
    <%= f.submit "Authenticate" ,class:"admin-login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/admin-footer"%>
<h1>新規商品の追加</h1>

<%= simple_form_for [:admins,@item] do |f| %>
    <div class="form-group">
      <%= f.label :name, '*Name' %>
      <%= f.text_field :name ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, '*Description' %>
      <%= f.text_field :description ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price, '*Price' %>
      <%= f.text_field :price ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :image, 'image' %>
      <%= f.file_field :image %>
    </div>
  <%= f.button :submit, "CREATE ITEM", :class => 'btn' %>
<% end %>
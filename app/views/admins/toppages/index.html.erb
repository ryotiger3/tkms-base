<%= render "shared/second-header"%>

<%= form_with model: @admin, url: admin_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      管理画面ログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">e-mail</label>
      <span class="indispensable">Reguired</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
      <span class="indispensable">Required</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='admin-login-btn'>
    <%= f.submit "Login" ,class:"admin-login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>